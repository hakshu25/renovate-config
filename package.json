{
  "name": "@hakshu25/renovate-config",
  "version": "0.0.1",
  "main": "none",
  "repository": "https://github.com/hakshu25/renovate-config.git",
  "author": "hakshu25 <hakshu25@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "yarn renovate-config-validator",
    "prepare": "husky install"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "timezone": "Asia/Tokyo",
      "schedule": [
        "every weekend"
      ],
      "assignees": [
        "hakshu25"
      ],
      "labels": [
        "renovate"
      ],
      "patch": {
        "automerge": true
      },
      "minor": {
        "packageRules": [
          {
            "matchDepTypes": [
              "devDependencies"
            ],
            "automerge": true
          }
        ]
      },
      "node": {}
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "husky": "8.0.3",
    "renovate": "36.8.3"
  },
  "volta": {
    "node": "18.16.1"
  }
}
