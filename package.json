{
  "name": "@flyhighair/renovate-config",
  "version": "0.0.1",
  "main": "none",
  "repository": "https://github.com/flyhighair/renovate-config.git",
  "author": "flyhighair <flyhighup.air25@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "yarn renovate-config-validator",
    "prepare": "husky install"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "timezone": "Asia/Tokyo",
      "schedule": [
        "every weekend"
      ],
      "assignees": [
        "flyhighair",
        "hakshu"
      ],
      "labels": [
        "renovate"
      ],
      "patch": {
        "automerge": true
      },
      "minor": {
        "packageRules": [
          {
            "matchDepTypes": [
              "devDependencies"
            ],
            "automerge": true
          }
        ]
      },
      "node": {}
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "husky": "8.0.3",
    "renovate": "35.48.0"
  },
  "volta": {
    "node": "18.15.0"
  }
}
